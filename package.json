{
  "name": "droply-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:wasm": "bash wasm/build.sh",
    "build:sdk": "pnpm -C packages/sdk build",
    "build:cli": "pnpm -C packages/cli build",
    "build:all": "pnpm build:wasm && pnpm -r --filter ./packages/* build",
    "dev:cli": "pnpm -C packages/cli dev",
    "test": "pnpm -r test",
    "test:conformance": "bash wasm/scripts/conformance.sh"
  },
  "devDependencies": {
    "prisma": "^6.14.0",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0",
    "zx": "^8.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0"
  }
}
